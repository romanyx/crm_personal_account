= simple_form_for @ecconnect_payment, url: ecconnect.ecconnect_payments_path do |f|
  = f.input :amount, input_html: { class: 'form-control' }
  = f.input :payer_id, as: :hidden, input_html: { class: 'form-control', value: current_contract.id }
  = f.button :submit, class: 'btn-primary contact_submit'