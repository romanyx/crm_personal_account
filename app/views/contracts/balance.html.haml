- set_meta_tags title: "#{current_contract.title} баланс", description: "Ваш баланс на текущий момент" , keywords: "Крыминфоком, Инфоком, Infocom, Crimeainfocom, пополнить баланс, статистика, личный кабинет"
%h4.contract_information Баланс
.balance
  .summa
    %div{class: "#{current_contract.balance_days_left > 5 ? 'green' : 'red'}"}
      - if current_contract.balance_summa < 0
        Ваш долг:
        %b= current_contract.balance_summa.abs
        грн.
      - else
        Ваш баланс:
        %b= current_contract.balance_summa
        грн.
= link_to "Оплатить кредитной картой", ecconnect.new_ecconnect_payment_path, class: 'contact_submit btn btn-primary btn-large'
%br/
%br/
%table.table
  %thead
    %tr.active
      %th Сумма
      %th Комментарий
      %th Дата
  %tbody
    - @payments.each do |p|
      %tr
        %td 
          = p.summa 
          грн
        %td 
          = p.comment
        %td 
          = I18n.l p.lm, format: :long
= will_paginate @payments, renderer: BootstrapPagination::Rails, bootstrap: 3, param_name: 'id'